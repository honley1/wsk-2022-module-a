                <p class="title">Game versions</p>
                <h2 class="info"><%= game_versions_count %></h2>
            </div>

            <div class="scores-item">
                <p class="title">Total scores</p>
                <h2 class="info"><%= scores_count %></h2>
            </div>
        </div>
    </div>
</body>
</html>